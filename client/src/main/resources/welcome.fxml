<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane fx:controller="pl.mzlnk.erlchatter.controller.WelcomeController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10" vgap="10">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints minWidth="100"
                           prefWidth="100"
                           maxWidth="Infinity"
                           halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200"
                           prefWidth="200"
                           maxWidth="Infinity"
                           hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    <!-- Add Header Label -->
    <Label text="Welcome to Erl Chatter"
           GridPane.columnIndex="0"
           GridPane.rowIndex="0"
           GridPane.columnSpan="2"
           GridPane.rowSpan="1"
           GridPane.halignment="CENTER">

        <font>
            <Font name="Arial" size="24"/>
        </font>

        <GridPane.margin>
            <Insets top="20" bottom="20"/>
        </GridPane.margin>
    </Label>


    <!-- Add Name Label -->
    <Label text="Login : "
           GridPane.columnIndex="0"
           GridPane.rowIndex="1">
    </Label>
    <!-- Add Name Text Field -->
    <TextField fx:id="nameField"
               prefHeight="40"
               GridPane.columnIndex="1"
               GridPane.rowIndex="1"/>


    <!-- Add Password Label -->
    <Label text="Password : "
           GridPane.columnIndex="0"
           GridPane.rowIndex="2"/>

    <!-- Add Password Field -->
    <PasswordField fx:id="passwordField"
                   prefHeight="40"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="2"/>


    <!-- Add Submit Button -->
    <Button fx:id="signInButton"
            text="sign in"
            prefWidth="200"
            prefHeight="40"
            defaultButton="true"
            GridPane.columnIndex="0"
            GridPane.rowIndex="3"
            GridPane.columnSpan="2"
            GridPane.rowSpan="1"
            GridPane.halignment="CENTER">

        <GridPane.margin>
            <Insets top="40"/>
        </GridPane.margin>
    </Button>

    <!-- Add Submit Button -->
    <Button fx:id="signUpButton"
            text="sign up"
            prefWidth="200"
            prefHeight="40"
            defaultButton="true"
            GridPane.columnIndex="0"
            GridPane.rowIndex="4"
            GridPane.columnSpan="2"
            GridPane.rowSpan="1"
            GridPane.halignment="CENTER">

        <GridPane.margin>
            <Insets top="10" bottom="20"/>
        </GridPane.margin>
    </Button>

</GridPane>