<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="pl.mzlnk.erlchatter.controller.WelcomeController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10" vgap="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints minWidth="100"
                           prefWidth="100"
                           maxWidth="Infinity"
                           halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200"
                           prefWidth="200"
                           maxWidth="Infinity"
                           hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    <ScrollPane prefWidth="600"
                prefHeight="700"
                GridPane.columnIndex="0"
                GridPane.columnSpan="6"
                GridPane.rowIndex="0">

        <GridPane.margin>
            <Insets bottom="20"/>
        </GridPane.margin>

    </ScrollPane>

    <!-- Add Name Text Field -->
    <TextField fx:id="nameField"
               prefHeight="40"
               prefWidth="450"
               GridPane.columnIndex="0"
               GridPane.columnSpan="5"
               GridPane.rowIndex="1"/>

    <!-- Add Submit Button -->
    <Button fx:id="signInButton"
            text="send"
            prefWidth="100"
            prefHeight="40"
            defaultButton="true"
            GridPane.columnIndex="5"
            GridPane.rowIndex="1"
            GridPane.rowSpan="1"
            GridPane.halignment="RIGHT"/>

</GridPane>